{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,

    "strictNullChecks": true,
    "strict": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots" : ["./node_modules/@types"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts"]
}
